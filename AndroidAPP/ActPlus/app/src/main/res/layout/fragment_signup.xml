<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.actplus.login">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>
    <TextView
        android:id="@+id/english_title"
        android:layout_below="@id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:text="注册 Actplus"/>
    <android.support.percent.PercentRelativeLayout
        android:layout_below="@id/english_title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <android.support.percent.PercentRelativeLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="40dp"
            android:layout_toLeftOf="@+id/sign_up_username"
            android:textAlignment="center"
            android:layout_margin="@dimen/dp5"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:layout_centerVertical="true"
            android:textSize="11dp" />
        <EditText
            android:maxLines="1"
            android:id="@+id/sign_up_username"
            android:layout_margin="@dimen/dp5"
            android:layout_centerHorizontal="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_style"
            app:layout_widthPercent="50%"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:textAlignment="center"
            android:hint="用户名仅限英文数字"
            android:textSize="15dp"/>
        </android.support.percent.PercentRelativeLayout>
        <android.support.percent.PercentRelativeLayout
            android:id="@+id/ll2"
            android:layout_below="@id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="40dp"
                android:layout_toLeftOf="@+id/sign_up_nickname"
                android:textAlignment="center"
                android:layout_margin="@dimen/dp5"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:layout_centerVertical="true"
                android:textSize="11dp" />
            <EditText
                android:id="@+id/sign_up_nickname"
                android:maxLines="1"
                android:layout_margin="@dimen/dp5"
                android:layout_centerHorizontal="true"
                android:layout_width="0dp"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"
                android:background="@drawable/input_style"
                app:layout_widthPercent="50%"
                android:textAlignment="center"
                android:hint="请输入昵称"
                android:textSize="15dp"/>
        </android.support.percent.PercentRelativeLayout>
        <android.support.percent.PercentRelativeLayout
            android:id="@+id/ll3"
            android:layout_below="@id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="40dp"
                android:layout_toLeftOf="@+id/sign_up_mailbox"
                android:textAlignment="center"
                android:layout_margin="@dimen/dp5"
                android:layout_height="wrap_content"
                android:text="邮箱"
                android:layout_centerVertical="true"
                android:textSize="11dp" />
            <EditText
                android:maxLines="1"
                android:id="@+id/sign_up_mailbox"
                android:layout_margin="@dimen/dp5"
                android:layout_centerHorizontal="true"
                android:layout_width="0dp"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"
                android:background="@drawable/input_style"
                app:layout_widthPercent="50%"
                android:textAlignment="center"
                android:nextFocusForward="@id/input_password"
                android:hint="请输入常用邮箱"
                android:textSize="15dp"/>
        </android.support.percent.PercentRelativeLayout>
        <android.support.percent.PercentRelativeLayout
        android:id="@+id/ll4"
        android:layout_below="@id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="40dp"
            android:layout_toLeftOf="@+id/sign_up_password"
            android:textAlignment="center"
            android:layout_margin="@dimen/dp5"
            android:layout_height="wrap_content"
            android:text="密码"
            android:layout_centerVertical="true"
            android:textSize="11dp" />
        <EditText
            android:maxLines="1"
            android:id="@+id/sign_up_password"
            android:layout_margin="@dimen/dp5"
            android:layout_centerHorizontal="true"
            android:layout_width="0dp"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:background="@drawable/input_style"
            app:layout_widthPercent="50%"
            android:textAlignment="center"
            android:hint="请输入密码"
            android:textSize="15dp"/>
    </android.support.percent.PercentRelativeLayout>
        <android.support.percent.PercentRelativeLayout
            android:id="@+id/ll5"
            android:layout_below="@id/ll4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <EditText
                android:maxLines="1"
                android:id="@+id/sign_up_password_confirm"
                android:layout_margin="@dimen/dp5"
                android:layout_centerHorizontal="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_style"
                app:layout_widthPercent="50%"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:hint="请再输入一次密码"
                android:textSize="15dp"/>
        </android.support.percent.PercentRelativeLayout>
        <Button
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/dp16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_up_butt"
            android:background="@drawable/input_style"
            android:textColor="#565de7"
            android:layout_centerHorizontal="true"
            android:text="注册"/>
    </android.support.percent.PercentRelativeLayout>
</RelativeLayout>