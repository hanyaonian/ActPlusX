<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.actplus.fragment.personcenter">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/center_head_img"
            android:layout_marginTop="40dp"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="20%"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="未登录"
            android:id="@+id/center_user_name"
            android:layout_below="@id/center_head_img"/>
        <Button
            android:id="@+id/center_contact_us"
            android:elevation="8dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_style"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="联系我们"
            app:layout_widthPercent="40%"
            android:layout_below="@+id/center_my_group"/>
        <Button
            app:layout_marginPercent="5%"
            android:id="@+id/center_my_group"
            android:elevation="8dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_style"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="我的组队"
            app:layout_widthPercent="40%"
            android:layout_below="@+id/center_user_name"/>
        <Button
            android:id="@+id/center_log_out"
            android:elevation="8dp"
            app:layout_marginPercent="10%"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_style"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="注销"
            android:textColor="#e92138"
            app:layout_widthPercent="40%"
            android:layout_below="@+id/center_contact_us"/>
    </android.support.percent.PercentRelativeLayout>
</FrameLayout>
